<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/com_facebook_button_background_color_disabled"
    tools:context="com.ccss.youthvolunteer.activity.ErrorMessageActivity">

    <!--<android.support.design.widget.AppBarLayout android:layout_height="wrap_content"-->
        <!--android:id="@+id/error_app_bar"-->
        <!--android:layout_width="match_parent" android:theme="@style/AppTheme.AppBarOverlay">-->

        <!--<android.support.v7.widget.Toolbar android:id="@+id/about_toolbar"-->
            <!--android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"-->
            <!--android:background="?attr/colorPrimary" app:popupTheme="@style/AppTheme.PopupOverlay" />-->

    <!--</android.support.design.widget.AppBarLayout>-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/error_image"
        android:layout_centerHorizontal="true"
        android:src="@drawable/app_error"
        android:padding="@dimen/com_parse_ui_small_vertical_spacing"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/dialog_title_error"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/com_parse_ui_vertical_spacing"
        android:layout_below="@id/error_image"
        android:id="@+id/error_message_text"
        style="@style/ParseLoginUI.TextView.Normal"/>

    <Button
        android:id="@+id/retry"
        style="@style/ParseLoginUI.Button"
        android:layout_marginTop="@dimen/com_parse_ui_vertical_spacing"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/retry" />

</RelativeLayout>
