<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.ccss.youthvolunteer.activity.IntroActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Youth Volunteer"
        android:textSize="24sp"
        android:textAppearance="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_margin="@dimen/com_parse_ui_small_horizontal_spacing"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Presented by"
        android:textSize="12sp"
        android:textAppearance="@color/colorPrimaryDark"
        android:layout_margin="@dimen/com_parse_ui_vertical_spacing"/>

    <include
        layout="@layout/com_parse_ui_parse_login_app_logo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_margin="@dimen/com_parse_ui_vertical_spacing"/>

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/app_logo"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ccss_title_bar"
        android:contentDescription="@string/com_parse_ui_logo_content_description" />

</LinearLayout>
