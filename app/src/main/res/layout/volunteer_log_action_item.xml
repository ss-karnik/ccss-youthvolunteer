<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:cardview="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_card_size"
        style="@style/CardView"
        cardview:cardUseCompatPadding="true"
        android:id="@+id/action_log_item_view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/com_parse_ui_small_vertical_spacing">

            <TextView
                android:id="@+id/log_category_indicator"
                android:layout_width="@dimen/com_parse_ui_small_vertical_spacing"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/colorGreenPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/log_action_title"
                android:paddingStart="@dimen/com_parse_ui_small_vertical_spacing"
                android:paddingLeft="@dimen/com_parse_ui_small_vertical_spacing"
                android:layout_toRightOf="@id/log_category_indicator"
                android:layout_toEndOf="@id/log_category_indicator"
                android:layout_alignParentTop="true"
                android:textStyle="bold"
                android:text="NParks gardening"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/log_action_organization"
                android:paddingStart="@dimen/com_parse_ui_small_vertical_spacing"
                android:paddingLeft="@dimen/com_parse_ui_small_vertical_spacing"
                android:paddingTop="@dimen/com_parse_ui_smallest_vertical_spacing"
                android:layout_toRightOf="@id/log_category_indicator"
                android:layout_toEndOf="@id/log_category_indicator"
                android:layout_below="@id/log_action_title"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:fadingEdge="horizontal"
                android:text="NParks for Singapore "
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/log_action_date"
                android:paddingStart="@dimen/com_parse_ui_small_vertical_spacing"
                android:paddingLeft="@dimen/com_parse_ui_small_vertical_spacing"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_below="@id/log_action_title"
                android:text="13/02/2016"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/log_action_location"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingTop="@dimen/com_parse_ui_small_vertical_spacing"
                android:text="Ang Mo Kio"
                android:textSize="14sp"
                android:layout_below="@id/log_action_date" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/log_action_comment"
                android:paddingTop="@dimen/com_parse_ui_small_vertical_spacing"
                android:text="User comment"
                android:textSize="14sp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:lines="2"
                android:paddingStart="@dimen/com_parse_ui_small_vertical_spacing"
                android:paddingLeft="@dimen/com_parse_ui_small_vertical_spacing"
                android:layout_toRightOf="@id/log_category_indicator"
                android:layout_toEndOf="@id/log_category_indicator"
                android:layout_below="@id/log_action_organization" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/log_action_points"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingTop="@dimen/com_parse_ui_small_vertical_spacing"
                android:text="Points: 10"
                android:textSize="14sp"
                android:layout_below="@id/log_action_location" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>