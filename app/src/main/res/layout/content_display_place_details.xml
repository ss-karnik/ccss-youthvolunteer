<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_display_place_details"
    tools:context="com.ccss.youthvolunteer.activity.DisplayPlaceDetailsActivity">

    <ProgressBar
        android:id="@+id/place_details_progress" style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" android:visibility="gone" />


    <LinearLayout android:id="@+id/place_details_form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context="com.ccss.youthvolunteer.activity.DisplayPlaceDetailsActivity"
        android:orientation="vertical"
        android:gravity="start">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="&lt;Name>"
            android:id="@+id/txtName"
            android:layout_gravity="start" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="&lt;Address>"
            android:id="@+id/txtAddress"
            android:layout_gravity="center_horizontal|start"
            android:gravity="start" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="&lt;Phone>"
            android:id="@+id/txtPhone"
            android:layout_gravity="center_horizontal|start" />
    </LinearLayout>

</RelativeLayout>
