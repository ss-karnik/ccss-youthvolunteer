<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_header_layout"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/side_nav_bar"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/AppThemeBlack" android:orientation="vertical"
    android:gravity="top">

    <com.parse.ParseImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" android:maxWidth="@dimen/image_size_large"
        android:paddingTop="@dimen/com_parse_ui_small_vertical_spacing" android:maxHeight="@dimen/image_size_large"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:id="@+id/nav_user_image" />

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/nav_user_fullname"
        android:layout_toRightOf="@id/nav_user_image"
        android:layout_toEndOf="@id/nav_user_image"
        android:layout_alignTop="@id/nav_user_image"
        android:textColor="@color/label_text_light"
        android:textStyle="bold"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <!--<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"-->
        <!--android:layout_toRightOf="@id/nav_user_image"-->
        <!--android:layout_toEndOf="@id/nav_user_image"-->
        <!--android:layout_below="@id/nav_user_fullname"-->
        <!--android:paddingTop="@dimen/com_parse_ui_small_vertical_spacing"-->
        <!--android:textColor="@color/label_text_light"-->
        <!--android:id="@+id/nav_user_email" />-->

</RelativeLayout>