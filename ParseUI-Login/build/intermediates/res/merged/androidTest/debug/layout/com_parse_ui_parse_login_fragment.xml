<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/com_parse_ui_vertical_margin"
        android:paddingLeft="@dimen/com_parse_ui_horizontal_margin"
        android:paddingRight="@dimen/com_parse_ui_horizontal_margin"
        android:paddingBottom="@dimen/com_parse_ui_vertical_margin"
        android:gravity="center"
        android:orientation="vertical">

        <include
            layout="@layout/com_parse_ui_parse_login_app_logo"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_marginBottom="@dimen/com_parse_ui_small_vertical_spacing"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/com_parse_ui_twitter_login_button"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ParseLoginUI.TextView.Title"
                android:layout_marginTop="@dimen/com_parse_ui_vertical_spacing"
                android:layout_marginBottom="@dimen/com_parse_ui_vertical_spacing"
                android:text="@string/com_parse_ui_parse_login_title"
                android:textStyle="bold"
                android:typeface="serif" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/com_parse_ui_twitter_login_button"/>

            <include layout="@layout/com_parse_ui_parse_login_third_party_section" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/com_parse_ui_small_vertical_spacing"
                android:background="@color/com_parse_ui_twitter_login_button"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/com_parse_ui_small_vertical_spacing"
                android:layout_marginBottom="@dimen/com_parse_ui_small_vertical_spacing"
                style="@style/ParseLoginUI.TextView"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:text="@string/com_parse_ui_parse_login_option_label"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/com_parse_ui_twitter_login_button"/>

            <include layout="@layout/com_parse_ui_parse_login_form" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
